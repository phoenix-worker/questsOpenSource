<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sheetBackground" />
            <corners android:radius="@dimen/normalCorners" />
        </shape>
    </item>

    <item
        android:width="@dimen/smallMargin"
        android:gravity="end">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorError" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="@dimen/normalCorners"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/normalCorners" />
        </shape>
    </item>

</layer-list>